<?xml version="1.0" encoding="utf-8"?>
<!-- Author: Loris Leiva -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile_background"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/profile_edit_main_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/profile_edit_picture"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight=".35"
            android:background="@color/DarkGray"
            android:contentDescription="@string/user_avatar_description"
            android:scaleType="fitXY"
            android:src="@drawable/default_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight=".65"
            android:background="@color/White"
            android:orientation="vertical"
            android:padding="@dimen/space" >

            <!-- First name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/firstname"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/profile_edit_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/firstname"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/default_text_size" />

            </LinearLayout>

            <!-- Last name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lastname"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/profile_edit_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/lastname"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/default_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_edit_main_frame"
        android:background="@color/White" >

        <LinearLayout
            android:id="@+id/profile_edit_characteristic_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space" >

            <!-- Date of birth -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dateofbirth"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_edit_dateofbirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_date_selected" />
            </LinearLayout>

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/profile_edit_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/default_text_size" />
            </LinearLayout>

            <!-- Company name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/company"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/profile_edit_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/company"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/default_text_size" />
            </LinearLayout>

            <!-- Job title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jobtitle"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/profile_edit_jobtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/jobtitle"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/default_text_size" />
            </LinearLayout>
            
            <!-- Email (static) -->
            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="@dimen/default_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="@dimen/default_text_size" />
            </LinearLayout>
            -->

            <!-- Submit Button -->
            <Button
                android:id="@+id/profile_edit_submit_button"
                style="@style/fluid_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_space"
                android:onClick="saveUserChanges"
                android:text="@string/button_save" />
            
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>