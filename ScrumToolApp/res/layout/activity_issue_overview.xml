<?xml version="1.0" encoding="utf-8"?>
<!-- Author: Cyriaque Brousse -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.IssueOverviewActivity" >

    <!-- Issue name -->
    <TextView
        android:id="@+id/issue_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:layout_marginTop="@dimen/space"
        android:maxLines="1"
        android:textSize="@dimen/header_title_size"
        android:textStyle="bold" />
    
    <!-- Status -->
    <TextView
        android:id="@+id/issue_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/issue_name"
        android:layout_marginTop="@dimen/space"
        android:background="@color/whitesmoke"
        android:gravity="center"
        android:padding="@dimen/space"
        android:textColor="@color/Black" />

    <!-- Duration estimation stamp -->
    <ch.epfl.scrumtool.gui.components.widgets.Stamp
        android:id="@+id/issue_estimation_stamp"
        android:layout_width="@dimen/stamp_width"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/issue_assignee_picture"
        android:layout_below="@id/issue_status"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical" />

    <!-- Label "assignee" -->
    <TextView
        android:id="@+id/issue_assignee_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/issue_status"
        android:layout_marginTop="@dimen/small_space"
        android:layout_toEndOf="@id/issue_estimation_stamp"
        android:maxLines="1"
        android:text="@string/issue_assignee_label"
        android:textStyle="bold" />
    
    <!-- Assignee profile picture -->
    <TextView
        android:id="@+id/issue_assignee_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@id/issue_assignee_label"
        android:layout_below="@id/issue_assignee_label"
        android:background="@color/Gainsboro" />

    <!-- Assignee name (link to assignee profile) -->
    <TextView
        android:id="@+id/issue_assignee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/issue_assignee_picture"
        android:layout_marginStart="5dp"
        android:layout_marginTop="@dimen/space"
        android:layout_toEndOf="@id/issue_assignee_picture"
        android:maxLines="1"
        android:textColor="@color/blue" />
    
    <!-- Issue description -->
    <ScrollView
        android:id="@+id/issue_desc_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/issue_estimation_stamp"
        android:layout_margin="@dimen/space" >

        <TextView
            android:id="@+id/issue_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
         
    </ScrollView>

    <TextView
        android:id="@+id/issue_sprint_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issue_estimation_stamp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>