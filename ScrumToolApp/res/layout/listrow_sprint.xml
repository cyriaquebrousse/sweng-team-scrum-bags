<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/list_row_padding" >
    
    <TextView
        android:id="@+id/sprint_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_row_name"
        android:textStyle="bold"
        android:maxLines="1"
        android:text="@string/sprint_row_name" />
    
    <TextView
        android:id="@+id/sprint_row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sprint_row_name"
        android:layout_marginTop="1dip"
        android:layout_toEndOf="@id/player_row_icon"
        android:maxLines="1"
        android:text="@string/sprint_row_date"
        android:textSize="@dimen/list_row_desc"
        android:textStyle="italic" />
    
</RelativeLayout>
