<?xml version="1.0" encoding="utf-8"?>
<!-- Author: Cyriaque Brousse -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.TaskOverviewActivity" >

    <!-- Task name -->

    <TextView
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:layout_marginTop="@dimen/space"
        android:maxLines="1"
        android:textSize="@dimen/header_title_size"
        android:textStyle="bold" />

    <!-- Task priority -->

    <ch.epfl.scrumtool.gui.components.widgets.PrioritySticker
        android:id="@+id/task_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/task_name"
        android:layout_below="@+id/task_name" />

    <!-- Task description -->
    <!-- TODO arbitrary height !!! -->

    <ScrollView
        android:id="@+id/task_desc_scrollview"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignTop="@id/task_priority"
        android:layout_marginEnd="@dimen/space"
        android:layout_marginStart="@dimen/space"
        android:layout_toEndOf="@id/task_priority" >

        <TextView
            android:id="@+id/task_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <!-- Task deadline ??? -->


    <!-- Status and estimation slates -->

    <LinearLayout
        android:id="@+id/task_slates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_desc_scrollview"
        android:orientation="horizontal"
        android:weightSum="1" >

        <!-- Status -->

        <ch.epfl.scrumtool.gui.components.widgets.Slate
            android:id="@+id/task_slate_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            custom:slate_text="En sprint"
            custom:slate_title="Status" />

        <!-- Estimation -->

        <ch.epfl.scrumtool.gui.components.widgets.Slate
            android:id="@+id/task_slate_estimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:slate_color="@color/BurlyWood"
            custom:slate_title="Estimation"
            android:layout_weight=".5" />
    </LinearLayout>

    <!-- Issues list -->


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_update_issue_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space"
            android:layout_below="@+id/task_slates" >

            <ListView
                android:id="@+id/issue_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@null"
                android:dividerHeight="@dimen/space"
                android:footerDividersEnabled="true"
                android:headerDividersEnabled="true"
                android:listSelector="@android:color/transparent" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_update_empty_issue_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/space"
            android:layout_below="@+id/task_slates" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/empty_issue_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="There are no issues for this task" />
            </ScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>