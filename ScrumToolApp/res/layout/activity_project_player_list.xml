<?xml version="1.0" encoding="utf-8"?>
<!-- Author: Cyriaque Brousse -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ch.epfl.scrumtool.gui.ProjectPlayerListActivity" >

    <!-- Block that contains fields for adding a player -->
    <RelativeLayout
        android:id="@+id/player_list_addplayer_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- Email field -->
        <EditText
            android:id="@+id/player_list_add_playeremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/player_list_add_button"
            android:hint="Player email"
            android:inputType="textEmailAddress" >

            <requestFocus />
        </EditText>

        <!-- "Add" button -->
        <Button
            android:id="@+id/player_list_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/player_list_add_playeremail"
            android:layout_alignParentEnd="true"
            android:text="Add" />
    </RelativeLayout>

    <!-- Current project players list -->
    <ListView
        android:id="@+id/project_playerlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_list_addplayer_block"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp" />

</RelativeLayout>