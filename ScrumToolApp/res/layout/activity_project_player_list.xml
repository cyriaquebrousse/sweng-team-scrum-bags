<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ch.epfl.scrumtool.gui.ProjectPlayerListActivity" >

    <!-- Block that contains fields for adding a player -->
    <RelativeLayout
        android:id="@+id/player_list_addplayer_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    </RelativeLayout>

    <!-- Current project players list -->
    <ListView
        android:id="@+id/project_playerlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_list_addplayer_block"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp" />

</RelativeLayout>