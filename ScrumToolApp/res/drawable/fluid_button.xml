<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_selected="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/shade_main_dark" />
                </shape></item>
            <item android:bottom="3dp" android:left="0dp" android:right="0dp" android:top="0dp"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <solid android:color="@color/shade_main" />
                </shape></item>
        </layer-list>
    </item>
        
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/shade_main" />
                </shape></item>
            <item android:bottom="3dp" android:left="0dp" android:right="0dp" android:top="0dp"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <solid android:color="@color/shade_main_dark" />
                </shape></item>
        </layer-list>
    </item>
        
    <item android:state_pressed="false" android:state_selected="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/shade_main" />
                </shape></item>
            <item android:bottom="3dp" android:left="0dp" android:right="0dp" android:top="0dp"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <solid android:color="@color/shade_main_dark" />
                </shape></item>
        </layer-list>
    </item>

</selector>