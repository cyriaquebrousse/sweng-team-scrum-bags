<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.scrumtool"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        <activity
            android:name=".gui.LoginActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.BacklogActivity"
            android:label="@string/title_activity_backlog" >
        </activity>
        <activity
            android:name=".gui.TaskActivity"
            android:label="@string/title_activity_task" >
        </activity>
        <activity
            android:name=".gui.MenuActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".gui.ProjectListActivity"
            android:label="@string/title_activity_projectList" >
        </activity>
        <activity
            android:name=".gui.ProjectOverviewActivity"
            android:label="@string/title_activity_project_overview" >
        </activity>
        <activity
            android:name=".gui.UserListActivity"
            android:label="@string/title_activity_user_list" >
        </activity>
        <activity
            android:name=".gui.TaskOverviewActivity"
            android:label="@string/title_activity_task_overview" >
        </activity>
        <activity
            android:name=".gui.IssueOverviewActivity"
            android:label="@string/title_activity_issue_overview" >
        </activity>
        <activity            
            android:name=".gui.ProfileOverviewActivity"
            android:label="@string/title_activity_profile_overview" >
        </activity>
    </application>

</manifest>